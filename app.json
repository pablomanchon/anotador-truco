{
  "expo": {
    "name": "Anotador de Truco",
    "slug": "truco-anotador",
    "version": "1.0.0",                // versionName visible
    "orientation": "portrait",
    "scheme": "trucoanotador",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "icon": "./assets/logo.webp",   // ícono 512x512 SIN fondo transparente
    "splash": {
      "image": "./assets/logo.webp",  // splash independiente (grande, centrado)
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },

    "android": {
      "package": "com.pablomanchon97.trucoanotador",
      "versionCode": 1,                // <— IMPORTANTE
      "permissions": [],               // deja vacío si no usás nada especial
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.webp",
        "backgroundColor": "#0f172a"
      }
    },

    "ios": { "supportsTablet": true },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/logo.webp"
    },

    "plugins": ["expo-router"],
    "experiments": { "typedRoutes": true },
    "extra": {
      "router": {},
      "eas": { "projectId": "e0ac6964-fa29-4233-b76e-2c9aee9aa359" }
    }
  }
}
